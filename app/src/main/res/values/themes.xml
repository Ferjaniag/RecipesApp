<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecipesProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_LightHight</item>

        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/green_LightHight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rose</item>
        <item name="colorSecondaryVariant">@color/rose_light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RecipesProject.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.RecipesProject.AppWidgetContainer" parent="Theme.RecipesProject.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>